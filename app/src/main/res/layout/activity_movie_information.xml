<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MovieInformationActivity">
    <!--android:orientation="horizontal"-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/searchBtnID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_searchBtnText"
            android:layout_alignParentStart="true"
            tools:layout_editor_absoluteX="103dp"
            tools:layout_editor_absoluteY="87dp" />

        <EditText
            android:id="@+id/searchEditTextID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/searchBtnID"
            android:hint="     enter movie name">
        </EditText>

        <ListView
            android:id="@+id/searchListViewID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/searchBtnID"/>

        <ProgressBar
            android:id="@+id/progressBarID"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/searchEditTextID"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="212dp"
            android:visibility="invisible" />

    </RelativeLayout>
</LinearLayout>